pipeline {
    agent any

    environment {
        GIT_REPO_URL = 'https://github.com/Bhargavreddysudha/simple-maven.git'
        GIT_BRANCH = 'main'
        SONARQUBE_SERVER = 'http://34.238.241.191:9000/'
        S3_BUCKET_NAME = 'charcus'
    }

    stages {
        stage('Checkout') {
            steps {
                checkout([$class: 'GitSCM', 
                          branches: [[name: "*/${GIT_BRANCH}"]], 
                          userRemoteConfigs: [[url: "${GIT_REPO_URL}"]]])
            }
        }

        stage('SonarQube Analysis') {
            steps {
                script {
                    def mvn = tool 'Maven'

                    withCredentials([string(credentialsId: 'sonar-jenkins', variable: 'SONARQUBE_TOKEN')]) {
                        withSonarQubeEnv(credentialsId: 'sonar-jenkins', installationName: 'SonarQube') {
                            sh "${mvn}/bin/mvn clean verify sonar:sonar -Dsonar.projectKey=Java-Code"
                        }
                    }
                }
            }
        }

        stage('Quality Gate') {
            steps {
                script {
                    def qualityGateStatus = sh(script: "curl -s '${SONARQUBE_SERVER}/api/qualitygates/project_status?projectKey=Java-Code' | jq -r '.projectStatus.status'", returnStdout: true).trim()
                    if (qualityGateStatus != 'OK') {
                        error "Quality Gate failed. Aborting the pipeline."
                    }
                }
            }
        }

        stage('Java Package') {
            steps {
                script {
                    def mvn = tool 'Maven'
                    def artifactName = "my-app-1.0-SNAPSHOT-${env.BUILD_NUMBER}.jar"
                    sh """
                        ${mvn}/bin/mvn clean package -DskipTests -Dmaven.buildNumber.doCheck=false -Dmaven.buildNumber.doUpdate=false -Dbuild.number=${env.BUILD_NUMBER}
                        mv target/my-app-1.0-SNAPSHOT.jar target/${artifactName}
                    """
                }
            }
        }

        stage('Move Artifact to S3') {
            steps {
                script {
                    def artifactName = "my-app-1.0-SNAPSHOT-${env.BUILD_NUMBER}.jar"
                    def sourceArtifactPath = "${env.WORKSPACE}/target/${artifactName}"
                    withCredentials([[$class: 'AmazonWebServicesCredentialsBinding', accessKeyVariable: 'AWS_ACCESS_KEY_ID', credentialsId: 'sonar-AWS', secretKeyVariable: 'AWS_SECRET_ACCESS_KEY']]) {
                        sh """
                            aws s3 cp ${sourceArtifactPath} s3://${S3_BUCKET_NAME}/
                        """
                    }
                }
            }
        }
    }
}
